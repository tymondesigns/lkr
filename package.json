{
  "name": "lkr",
  "version": "0.3.0",
  "description": "A Fluent Storage API",
  "main": "dist/lkr.js",
  "types": "index.d.ts",
  "scripts": {
    "compile": "tsc --pretty",
    "format": "prettier --write --no-semi --single-quote \"src/**/*.ts\"",
    "build:umd": "cross-env NODE_ENV=umd rollup --config",
    "build:cjs": "cross-env NODE_ENV=cjs rollup --config",
    "build": "run-p build:*",
    "clean": "rimraf dist",
    "check": "run-s compile lint",
    "test": "ava --verbose",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prebuild": "run-s format check clean",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tymondesigns/lkr.git"
  },
  "author": "Sean Tymon <tymon148@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tymondesigns/lkr/issues"
  },
  "homepage": "https://github.com/tymondesigns/lkr",
  "dependencies": {
    "chitu": "^0.3.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "codecov": "^1.0.1",
    "cross-env": "^5.1.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.2",
    "rimraf": "^2.5.1",
    "rollup": "^0.50.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.4.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.8.0",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "uglify-js": "^2.6.1"
  }
}
